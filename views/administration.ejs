<%- include ('partials/header.ejs') %>
        <section class="branches">
            <h2>Inventory Administration</h2>
            <form action="/api/insert-product" method="POST">
                <div class="form-group">
                    <label for="codigo">Código:</label>
                    <input type="text" id="codigo" name="codigo" required>
                </div>
                <div class="form-group">
                    <label for="nombre">Nombre:</label>
                    <input type="text" id="nombre" name="nombre" required>
                </div>
                <div class="form-group">
                    <label for="descripcion">Descripción:</label>
                    <textarea id="descripcion" name="descripcion" required></textarea>
                </div>
                <div class="form-group">
                    <label for="caducidad">Caducidad:</label>
                    <input type="date" id="caducidad" name="caducidad" required>
                </div>
                <div class="form-group">
                    <label for="tipo">Tipo:</label>
                    <select type="text" id="tipo" name="tipo" required>
                        <% for(let i=0; i<product_types.length; i++) { %>
                            <option value=<%=(i+1)%>><%= product_types[i].product_type%></option>
                        <% } %>
                    </select>
                </div>
                <div class="form_group">
                    <label for="sucursal">Sucursal:</label>
                    <select type="text" id="sucursal" name="sucursal" required>
                        <% for(let i=0; i<branches.length; i++) { %>
                            <option value=<%=(i+1)%>><%= branches[i].branch%></option>
                        <% } %>
                    </select>
                </div>
                <div class="form-group">
                    <label for="cantidad">Cantidad:</label>
                    <input type="number" id="cantidad" name="cantidad" required>
                </div>
                <button type="submit">Insert product</button>
            </form>
        </section>
<%- include ('partials/footer.ejs') %>